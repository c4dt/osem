{
  "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.16.0/.schema/devbox.schema.json",
  "packages": {
    "ruby":       "3.3",
    "libyamlcpp": "latest",
    "libyaml": {
      "version": "latest",
      "outputs": ["dev"]
    },
    "pkg-config": "latest",
    "postgresql": "latest"
  },
  "shell": {
    "init_hook": [
      "bundle config set with 'development,test'",
      "bundle install"
    ],
    "scripts": {
      "test": [
        "echo \"Error: no test specified\" && exit 1"
      ]
    }
  }
}
